<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MP3SearchViewController">
   <children>
      <HBox spacing="10.0">
         <children>
            <Label text="Search: " />
            <TextField fx:id="searchTextField" alignment="CENTER" minWidth="200.0" promptText="Escribe el nombre del archivo" />
            <Button fx:id="searchButton" mnemonicParsing="false" text="Search" />
            <Button fx:id="stopSearchButton" mnemonicParsing="false" text="Stop" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Label text="Starting path:" />
            <Label fx:id="inicialPathLabel" text="/home" />
            <Button fx:id="selectPathButton" mnemonicParsing="false" text="Select Path" />
         </children>
      </HBox>
      <ListView fx:id="fileListview" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
