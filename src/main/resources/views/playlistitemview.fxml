<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="playlistItemVBox" alignment="CENTER_LEFT" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PlaylistItemViewController">
   <HBox alignment="CENTER" spacing="20.0">
      <children>
          <ImageView fx:id="imageView" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" />
         <VBox alignment="CENTER_LEFT">
            <children>
                <Label fx:id="nameLabel" styleClass="playlist-name" text="PlaylistTitle">
                  <font>
                     <Font size="14.0" />
                  </font>
               </Label>
                <Label fx:id="songCountLabel" styleClass="song-count" text="Number of Songs : 0">
                  <font>
                     <Font size="10.0" />
                  </font>
               </Label>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </VBox>
      </children>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
</VBox>
